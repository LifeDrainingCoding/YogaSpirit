<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.TabBar" parent="Widget.Material3.TabLayout">
        <item name="singleLine">true</item>
        <item name="tabMaxWidth">200dp</item>
        <item name="android:ellipsize">end</item>
        <item name="tabMode">scrollable</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="Widget.PollTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    <style name="BaseMargin">
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="Widget.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="colorOutline">@color/primary</item>
    </style>
</resources>